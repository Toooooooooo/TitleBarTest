        <item name="android:layout_width">@dimen/icon_m</item>
        <item name="android:layout_height">@dimen/icon_m</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="textStyle_title_bar" parent="textStyle_base">
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@color/white</item>
